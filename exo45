#include "TP_lib.h"

int main (void)
{
    short int LancerDe ();
    unsigned resultat;
    unsigned long chiffre=0;

    while ( resultat!=1)
    {
        resultat = LancerDe();
        if (resultat == 2)
            chiffre= chiffre+4;

        else if (resultat == 4)
            chiffre= chiffre+4;

        else if (resultat==6)
            chiffre= chiffre+6;

        else if (resultat==3)
            chiffre= chiffre*2;

        else if (resultat==5)
            chiffre=chiffre-2;

    }
    return 0;
}
